	int T4Attack() {
		srand(time(NULL));
		return rand() % 16 + 1;
	}
	int T4DeathCheck() {
		return T4Flag = true;
	}

};

class TierBoss {
public:
	int health;
	bool TBFlag = false;
	int TBAttack() {
		srand(time(NULL));
		return rand() % 20 + 1;
	}
	int TBDeathCheck() {
		return TBFlag = true;
	}
};

//Character Class:

class character {
public:
	int health;
	int maxhealth;
	weapon currentweapon;
	string backstory, fname, lname;

	const int heal = 30;
	int potcount;
	int potuse() {
		if (potcount > 0 && health + 15 <= 100) {
			potcount -= 1;
			return heal;
		}
		else
			return 0;
	};
};

