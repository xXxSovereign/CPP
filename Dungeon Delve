//Weapon Structure:

struct weapon {

	int damage;
	string tier;
	string type;
	string name;

};

//Enemy Classes

class Tier1 {
public:

	int health;
	bool T1Flag = false;
	string name;


	int T1DeathCheck() {
		return T1Flag = true;
	}

	int T1Attack() {
		srand(time(NULL));
		return rand() % 3 + 1;
	}

};

class Tier2 {
public:
	int health ;
	bool T2Flag = false;

	int T2Attack() {
		srand(time(NULL));
		return rand() % 7 + 1;
	}

	int T2DeathCheck() {
		return T2Flag = true;
	}

};

class Tier3 {
